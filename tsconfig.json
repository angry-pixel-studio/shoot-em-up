{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": [ "es2020", "dom" ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "suppressExcessPropertyErrors": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
